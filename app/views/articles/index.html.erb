<div class="container">
  <%= link_to "New Post", new_article_path %>
  <div class="post">
    <% @articles.each do |article| %>
      <div class="post-title">
        <%= article.title %>
      </div>
      <div class="post-body">
        <%= article.body %>
      </div>
      <div class="post-user">
        By <%= @username %>
      </div>
      <div class="post-date">
        <%= article.updated_at.strftime("%d %b %Y") %>
      </div>
    <% end %>
  </div>
</div>